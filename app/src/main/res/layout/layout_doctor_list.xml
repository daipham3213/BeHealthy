<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/list_doctor_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_ambulance" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/list_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some one's name"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="18dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_star_24"
        tools:layout_editor_absoluteX="353dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:id="@+id/list_doctor_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        tools:layout_editor_absoluteX="377dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/list_doctor_specialize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialize"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="46dp" />

</androidx.constraintlayout.widget.ConstraintLayout>